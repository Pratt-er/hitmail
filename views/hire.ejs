 // Edit Comment
 $('.edit-comment').on('click', function() {
      const commentId = $(this).data('comment-id');
      const newText = prompt('Enter the updated comment:'); // Replace with a form or modal

      // Send a PUT request to update the comment
      $.ajax({
        url: `/comments/${commentId}`,
        method: 'PUT',
        data: { text: newText }, // Send the updated text
        success: function(response) {
          // Handle success (e.g., update the displayed comment)
          console.log('Comment updated:', response);
          // Update the displayed comment text
          $(`.edit-comment[data-comment-id="${commentId}"]`).closest('.comment-text').find('p').text(newText);
        },
        error: function(err) {
          console.error('Error updating comment:', err);
        }
      });
    });

    // Delete Comment
    $('.delete-comment').on('click', function() {
      const commentId = $(this).data('comment-id');

      // Confirm deletion
      const confirmDelete = confirm('Are you sure you want to delete this comment?');
      if (!confirmDelete) return;

      // Send a DELETE request to delete the comment
      $.ajax({
        url: `/comments/${commentId}`,
        method: 'DELETE',
        success: function(response) {
          // Handle success (e.g., remove the deleted comment from the UI)
          console.log('Comment deleted:', response);
          // Remove the deleted comment from the UI
          $(`.delete-comment[data-comment-id="${commentId}"]`).closest('li').remove();
        },
        error: function(err) {
          console.error('Error deleting comment:', err);
        }
      });
    });

